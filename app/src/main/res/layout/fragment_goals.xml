<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GoalsFragment">

    <TextView
        android:id="@+id/tv_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/din_bold"
        android:textSize="20dp"
        android:textColor="@color/lightgrey"
        android:text="Challenges" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bt_goals"
    android:layout_width="0dp"
    android:layout_height="40dp"
    app:layout_constraintWidth_percent="0.5"
    app:layout_constraintTop_toBottomOf="@id/tv_challenges"
    app:layout_constraintEnd_toStartOf="@+id/bt_badges">

    <TextView
        android:id="@+id/tv_goals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/macaw"
        android:text="GOALS"
        android:gravity="center"
        android:fontFamily="@font/feather_bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_goals"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/macaw"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bt_badges"
    android:layout_width="0dp"
    android:layout_height="40dp"
    app:layout_constraintWidth_percent="0.5"
    app:layout_constraintTop_toBottomOf="@id/tv_challenges"
    app:layout_constraintStart_toEndOf="@+id/bt_goals">

    <TextView
        android:id="@+id/tv_badges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/lightgrey"
        android:text="BADGES"
        android:gravity="center"
        android:fontFamily="@font/feather_bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_badges"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/lightgrey"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>